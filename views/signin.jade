include header.jade
  body
    h1 Sign In
    signin
      form
        div {{errormsg}}
        div
          input(type='text', ng-model='user.name', placeholder='Reddit Username')
        div
          input(type='password', ng-model='user.pass', placeholder='Reddit Password')
            
        input(type='submit', ng-click='submitUserName(user)', value='Login')
